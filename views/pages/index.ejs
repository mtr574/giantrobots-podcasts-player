<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../partials/header.ejs %>
</head>

<body>
    <% include ../partials/nav.ejs %>
        <header>
            <div class="jumbotron text-center">
                <div class="container">
                    <div class="logo-wrapper">
                        <img class="img-responsive" alt="Giant Robots Smashing Into Other Giant Robots" src="https://media.simplecast.com/podcast/image/271/small_1437963534-artwork.jpg">
                    </div>
                    <h3>Giant Robots Player</h3>
                    <nav>
                        <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-nav" aria-expanded="false">
                          <span class="glyphicon glyphicon-menu-hamburger" aria-hidden="true"></span>
                          <span class="sr-only">Toggle navigation</span>
                        </button>
                    </nav>
                </div>
            </div>
        </header>
        <div class="container-fluid">
            <div class="row">
                <% for(var index = 0; index < data.length; index++) { %>
                    <article class="col-md-2 col-sm-4 col-xs-12">
                      <button type="button" class="article-bookmark" aria-label="Bookmark This">
                        <span class="glyphicon glyphicon-bookmark" aria-hidden="true"></span>
                      </button>
                        <div class="card shad">
                            <a href="<%= data[index].link %>"><h4><%= data[index].title %></h4></a>
                            <audio preload="none" controls="true">
                        <source src="<%= data[index].enclosures["0"].url %>" type="audio/mpeg">
                        Not supported.
                      </audio>
                        </div>
                    </article>
                    <% } %>
            </div>
        </div>
        <footer>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-md-12">
                        <hr />
                        <div class="col-xs-6">
                            <p>
                                Thanks to <a href="http://giantrobots.fm/">http://giantrobots.fm/</a> for an awesome podcast!
                            </p>
                        </div>
                        <div class="col-xs-6">
                            <ul>
                                <li><a href="/info">Info</a></li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </footer>
        <script type="text/javascript">
            var articles = document.getElementsByTagName('article'),
                random_article_index = Math.floor((Math.random() * articles.length) + 1);

            function randomArticle() {
                for (var i = 0; i < articles.length; i++) {
                    articles[i].style.display = "none";
                }
                articles[random_article_index].style.display = "";
            }

            (function buttonListener() {
                btns = document.querySelectorAll('button.menu');
                for (var i = 0; i < btns.length; i++) {
                    btns[i].addEventListener('click', function() {
                        document.querySelectorAll('.navbar-toggle')[0].click();
                    })
                }
            })();
        </script>
</body>

</html>
